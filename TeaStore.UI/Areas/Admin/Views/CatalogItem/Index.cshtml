@model IEnumerable<CatalogItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border bg-light">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Каталог чая</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(n => n.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(n => n.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(n => n.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(n => n.SubCategoryId)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(n => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(n => item.Price.ToString("C2"))
                        </td>
                        <td>
                            @Html.DisplayFor(n => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(n => item.SubCategory.Name)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>Вы еще не добавили ни одной позиции чая... <i class="far fa-frown-open"></i></p>
        }
    </div>
</div>